<project name="jerklib" default="dist" basedir=".">
    <description>
        Jerklib is event-driven IRC Library that can be used to write IRC Bots/clients.
    </description>

    <property name="src" location="src"/>
    <property name="build" location="build"/>
    <property name="dist" location="dist"/>
    <property prefix="svn" file="svn.properties"/>
    <property prefix="build" file="build.properties"/>
    <path id="project.classpath">
        <fileset dir="lib">
            <include name="**/*.jar"/>
        </fileset>
    </path>

    <target name="init">
        <mkdir dir="${build}"/>
        <mkdir dir="${dist}"/>
        <touch file="svn.properties"/>
        <exec executable="svn" output="svn.properties">
            <arg value="info"/>
        </exec>
    </target>

    <taskdef resource="svntask.properties" classpathref="project.classpath"/>
    <target name="update" depends="init">
        <echo message="updating ${ant.project.name} from subversion"/>
        <svn>
            <update dir="."/>
        </svn>
        <echo message="Done updating code for ${ant.project.name}."/>
    </target>

    <target name="subversion" depends="init">
        <echo message="downloading code for ${ant.project.name} from subversion..."/>
        <svn>
            <checkout url="https://jerklib.svn.sourceforge.net/svnroot/jerklib/jerklib" destPath="jerklib-svn"/>
        </svn>       
    </target>

    <target name="javadoc" depends="init">
        <javadoc access="public" author="true" classpath="."
                 destdir="${dist}/docs" nodeprecated="false"
                 nodeprecatedlist="false"
                 noindex="false" nonavbar="false" notree="false"
                 windowtitle="Jerklib API">
            <fileset dir="${src}/jerklib" includes="**/*.java"/>

            <link href="file://${dist}/docs/"/>
            <link href="http://java.sun.com/javase/6/docs/api/"/>
        </javadoc>

    </target>

    <target name="rebuild" depends="clean, dist"/>

    <target name="compile" depends="init"
            description="compile">
        <javac srcdir="${src}" destdir="${build}"/>
        <echo file="${build}/jerklib/JerkLib.Properties" message="version=${build.version}+${svn.Revision}"/>
        <echo file="${src}/jerklib/JerkLib.Properties" message="version=${build.version}+${svn.Revision}"/>
    </target>

    <target name="dist" depends="clean,compile"
            description="Create the jar">
        <jar jarfile="${dist}/jerklib.jar" basedir="${build}"/>
    </target>

    <target name="run" depends="dist">
        <java classpath="${dist}/jerklib.jar" classname="jerklib.examples.jerkbot2.Jerkbot"
              fork="true" spawn="true"/>
    </target>

    <target name="clean"
            description="clean up">
        <delete dir="${build}"/>
        <delete dir="${dist}"/>
        <delete file="svn.properties"/>
    </target>
</project>